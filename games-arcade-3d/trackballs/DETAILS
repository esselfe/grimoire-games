   SOURCE_URL[0]=${SOURCEFORGE_URL}/${SPELL}/${SOURCE}
     SOURCE_HASH=sha512:5f0411ba82dd3083e965c90bd6edf3683869b51b247337781f8a925c2e1b9a71c0ba093dd84bf8357b77b76ac0340c96b4a69ad54c77ad8779b1512f63b20fd1
