depends  qstat       &&

if  [  "$GTK2"  ==  "y"  ]
then
  depends  gtk+2  "--enable-gtk2"
else
  depends  gdk-pixbuf  "--disable-gtk2"
fi  &&

optional_depends  bzip2                                \
                  "--enable-bzip2"                     \
                  "--disable-bzip2"                    \
                  "to use bzip2 for data compression"
