
if  [  "$ERIS_BRANCH"  ==  "cvs"    -o   \
       "$ERIS_BRANCH"  ==  "devel"       ];  then
  message  "${SPELL_COLOR}eris${MESSAGE_COLOR} requires ${SPELL_COLOR}atlas-c++${MESSAGE_COLOR} cvs"  &&
  depends  libsigc++3  &&
  depends  skstream    &&
  depends  wfmath      &&
  depends  cvs
else
  depends  libsigc++2  &&
  depends  skstream2   &&
  depends  wfmath2
fi
