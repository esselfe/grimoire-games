install -m 755 ${SCRIPT_DIRECTORY}/nexuiz-sdl       \
${INSTALL_ROOT}/usr/games                           &&
install -m 755 ${SCRIPT_DIRECTORY}/nexuiz-glx       \
${INSTALL_ROOT}/usr/games                           &&
