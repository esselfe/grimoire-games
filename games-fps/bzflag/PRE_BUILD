default_pre_build                                             &&
cd ${SOURCE_DIRECTORY}                                        &&
sedit 's:-O0::g' configure.ac                                 &&
sedit 's:-Werror::g' configure.ac                             &&
if [[ $BZF_BZADMIN_PATCH == y ]]; then
