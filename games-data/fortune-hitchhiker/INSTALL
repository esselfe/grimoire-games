cd $SOURCE_DIRECTORY                                            &&
mkdir -p "${INSTALL_ROOT}"/usr/share/games/fortunes/            &&
for cookie in *.dat
do
cp -v $cookie ${INSTALL_ROOT}/usr/share/games/fortunes/         &&
cp -v ${cookie/.dat} ${INSTALL_ROOT}/usr/share/games/fortunes/    
done                                                            &&
cd ${INSTALL_ROOT}/usr/share/games/fortunes/                    &&
find_and_scam

