if ! grep -q CONFIGURED  $SPELL_CONFIG  ; then 
	if query "NetHack can use X11(DEFAULT)  or TTY(console) for Windowing \nAnswer "y" to Change DEFAULT" n
	then
		#if query "Use QT/KDE" n
		#then echo  QT=yes >> $SPELL_CONFIG
		#else  
			if query "Use TTY " n
			then  echo TTY=yes >> $SPELL_CONFIG
			#else 
			#	if query "Use GNOME " n
			#	then echo GTK=yes >> $SPELL_CONFIG
			#	fi
			#fi
		fi
	else echo -e "X11=yes \nCONFIGURED=yes">> $SPELL_CONFIG	
	fi
fi                     &&
if ! grep -q "COPY_FILES=" $SPELL_CONFIG; then
   if query "Copy nethackrc and Xdefaults to game users home directories?" y
   then echo "COPY_FILES=y"  >>  $SPELL_CONFIG
   else echo "COPY_FILES=n"  >>  $SPELL_CONFIG
   fi
fi

