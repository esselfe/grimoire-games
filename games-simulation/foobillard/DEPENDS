depends  libpng     &&
depends  sdl        &&
depends  freetype2  &&

if  [[ "$(get_spell_provider  sdl  X11-LIBS)"  ==  "xorg-server" ]]  ||
    [[ "$(get_spell_provider  sdl  X11-LIBS)"  ==  "xorg-libs" ]]
then
  depends  libxi
fi                  &&

optional_depends  GLUT                                        \
                  "--enable-glut"                             \
                  ""                                          \
                  "to use glut instead of SDL for windowing"  &&

optional_depends  nvidia_headers                                \
                  "--enable-bumpref"                            \
                  "--enable-bumpref=no --enable-nvidia=no"      \
                  "to enable NVIDIA specific extensions to GL" 
