     SOURCE2_URL=svn://vegastrike.svn.sourceforge.net/svnroot/vegastrike/trunk/data$VEGASTRIKE_DATAVERSION:vegastrike-data$VEGASTRIKE_DATAVERSION-svn
   SOURCE_IGNORE=volatile
  SOURCE2_IGNORE=volatile
fi
