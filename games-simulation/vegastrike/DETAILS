           SPELL=vegastrike
if [[ $VEGASTRIKE_DEVEL == "n" ]]; then
         VERSION="0_4_3"
          SOURCE=$SPELL-$VERSION-vegastrike.tar
         SOURCE2=$SPELL-$VERSION-data4.x.tar
else
	if [[ $VEGASTRIKE_UPDATE == "y" ]]; then
		VERSION=$(date +%Y-%m-%d)
	else
		VERSION=svn
	fi
          SOURCE=$SPELL-svn-vegastrike.tar
         SOURCE2=$SPELL-svn-data4.x.tar
fi
SOURCE_DIRECTORY=$BUILD_DIRECTORY/$SPELL-$VERSION
  VEGASTRIKE_SVN="https://vegastrike.svn.sourceforge.net/svnroot/vegastrike"
   SOURCE_IGNORE=volatile
  SOURCE2_IGNORE=volatile
        WEB_SITE=http://vegastrike.sourceforge.net/
         ENTERED=20040502
      LICENSE[0]=GPL
           SHORT="3D Space Simulator."
