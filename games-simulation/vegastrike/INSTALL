if [[ $VEGASTRIKE_DEVEL == "y" ]]; then
cp -vR ${SOURCE_DIRECTORY}/$SPELL-data4.x-svn               \
      ${INSTALL_ROOT}/usr/share/games/vegastrike/data4.x
else
cp -vR ${SOURCE_DIRECTORY}/$SPELL-data4.x-$VERSION          \
      ${INSTALL_ROOT}/usr/share/games/vegastrike/data4.x
fi
install -v -o root -g games -m 755                          \
        ${SOURCE_DIRECTORY}/vegastrike/vssetup              \
        ${INSTALL_ROOT}/usr/games                           &&
cd ${SOURCE_DIRECTORY}/vegastrike                           &&
default_install                                             &&
cp -v $SCRIPT_DIRECTORY/vsinstall $INSTALL_ROOT/usr/games
