local INSTALL="install -o root -g games"
mkdir -p ${INSTALL_ROOT}/usr/share/games/vegastrike              &&
cp -R ${SOURCE_DIRECTORY}/data4.x \
	   ${INSTALL_ROOT}/usr/share/games/vegastrike/data4.x    &&
$INSTALL -m 755 ${SOURCE_DIRECTORY}/vegastrike/vssetup \
	${INSTALL_ROOT}/usr/games                                &&
cd ${SOURCE_DIRECTORY}/vegastrike                                &&
default_install                                                  &&
$INSTALL $SCRIPT_DIRECTORY/vsinstall $INSTALL_ROOT/usr/games
