   SOURCE_URL[0]=$SOURCEFORGE_URL/$SPELL/$SOURCE
     SOURCE_HASH=sha512:5b3ef3337b9187ba2706d9c8dc09ce38c9dfab511f4deb6a71b4363e4a10f4cdf608fc61958e1d12a2d22b8e0c4a9ad8bfbabf6a5fdb8b2099467ab04fe30e7d
