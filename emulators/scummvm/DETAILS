         VERSION=cvs  
  FORCE_DOWNLOAD=1 
          SOURCE=${SPELL}-${VERSION}_cvs-src.tar.bz2 
   SOURCE_URL[0]=cvs://:pserver:anonymous@cvs.sourceforge.net:/cvsroot/scummvm:scummvm 
