mkdir -p /usr/share/games/singularity &&
cd $SOURCE_DIRECTORY &&
cp -r * /usr/share/games/singularity &&
cd /usr/share/games &&
chown -R root:games singularity &&
chmod -R g+rX singularity &&
chmod -R o-rwx singularity &&
mkdir -p /var/games/singularity &&
chown root:games /var/games/singularity &&
chmod 0770 /var/games/singularity &&
rmdir singularity/saves &&
ln -s /var/games/singularity singularity/saves &&
cd /usr/games &&
echo '#!/bin/sh' >singularity &&
echo '/usr/share/games/singularity/Endgame_Linux $@' >>singularity &&
chown root:games singularity &&
chmod 0750 singularity
