default_pre_build       &&
cd ${SOURCE_DIRECTORY}  &&

if [ "${WIDELANDS_BUILD}" == "debug" ]; then
   echo "BUILD:=debug" >> Makefile.local
else
   echo "BUILD:=release" >> Makefile.local
fi  &&

if [ "${WIDELANDS_GGZ}" == "y" ]; then
   echo "USE_GGZ:=YES" >> Makefile.local
fi  &&

if [ "${WIDELANDS_CVS}" == "y" ]; then  
   for CVS_DIR in $(ls -lR * | grep "/CVS")
   do
      rm -rf "${CVS_DIR/:/}"
   done
fi
