local  INSTDIR=${INSTALL_ROOT}/usr/lib/games/widelands  &&
mkdir -p ${INSTDIR}                                     &&
cp -Rv campaigns ${INSTDIR}                             &&
cp -Rv fonts ${INSTDIR}                                 &&
cp -Rv game_server ${INSTDIR}                           &&
cp -Rv locale ${INSTDIR}                                &&
cp -Rv maps ${INSTDIR}                                  &&
cp -Rv music ${INSTDIR}                                 &&
cp -Rv pics ${INSTDIR}                                  &&
cp -Rv sound ${INSTDIR}                                 &&
cp -Rv utils ${INSTDIR}                                 &&
cp -Rv tribes ${INSTDIR}                                &&
cp -Rv worlds ${INSTDIR}                                &&
cp -Rv widelands ${INSTDIR}                             &&
cp -v ${SCRIPT_DIRECTORY}/widelands /usr/games
