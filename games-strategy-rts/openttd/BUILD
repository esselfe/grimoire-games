if [ "x$OPENTTD_NETWORK" == "xy" ]; then
	OPTS="WITH_NETWORK=1 $OPTS"
else
	OPTS="WITH_NETWORK= $OPTS"
fi &&
make -j1 MANUAL_CONFIG=1 \
	UNIX=1 \
	INSTALL=1 \
	RELEASE=${VERSION} \
	USE_HOMEDIR=1 \
	PERSONAL_DIR=.openttd \
	PREFIX=$INSTALL_ROOT/usr \
	DATA_DIR=share/games/${SPELL} \
	VERBOSE=1 \
	$OPTS
