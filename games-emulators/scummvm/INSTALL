I_DIR="${INSTALL_ROOT}/usr/share/games/scummvm"     &&

mkdir  -p  ${I_DIR}                                 &&
mkdir  -p  ${INSTALL_ROOT}/usr/games                &&

install  -m0755  scummvm      ${I_DIR}              &&
install  -m0644  scummvm.xpm  ${I_DIR}              &&
install  -m0644  $SCRIPT_DIRECTORY/scummvmrc        \
                 ${I_DIR}                           &&
install  -m0644  $SCRIPT_DIRECTORY/scummvmrc        \
                 ${INSTALL_ROOT}/etc/scummvmrc      &&
install  -m0755  $SCRIPT_DIRECTORY/scummvm          \
                 ${INSTALL_ROOT}/usr/games/scummvm
