I_DIR="${INSTALL_ROOT}/usr/share/games/scummvm"     &&

mkdir  -p  ${I_DIR}/tools                           &&
mkdir  -p  ${INSTALL_ROOT}/usr/games                &&

cp -f scummvm         ${INSTALL_ROOT}/usr/games  &&
cp -f tools/convbdf   ${I_DIR}/tools     &&
cp -f tools/md5table  ${I_DIR}/tools     &&
cp -f scummvm.xpm     ${I_DIR}           &&

chmod 0755 ${INSTALL_ROOT}/usr/games/scummvm  &&
chmod 0755 ${I_DIR}/tools/convbdf             &&
chmod 0755 ${I_DIR}/tools/md5table            &&
chmod 0644 ${I_DIR}/scummvm.xpm
