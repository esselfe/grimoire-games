if  [  "$SDL_SOUND"  =  "y"  -o  \
       "$SDL_VIDEO"  =  "y"      ];  then
  depends  sdl
fi  &&

optional_depends  alsa-lib                                     \
                  "use_alsa"                                   \
                  ""                                           \
                  "Do you want to utilize alsa sound output?"  &&


optional_depends  esound                                         \
                  "use_esound"                                   \
                  ""                                             \
                  "Do you want to utilize esound sound output?"
