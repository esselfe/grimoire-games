I_DIR="/usr/share/games/${SPELL}"       &&

make  PREFIX=${INSTALL_ROOT}/usr        \
      BINDIR=${INSTALL_ROOT}/usr/games  \
      -f  makefile.unix                 \
      install                           &&

mkdir -p ${I_DIR}                      &&
mkdir -p ${I_DIR}/artwork               &&
mkdir -p ${I_DIR}/cabinets              &&
mkdir -p ${I_DIR}/cfg                   &&
mkdir -p ${I_DIR}/flyers                &&
mkdir -p ${I_DIR}/hi                    &&
mkdir -p ${I_DIR}/icons                 &&
mkdir -p ${I_DIR}/ini                   &&
mkdir -p ${I_DIR}/inp                   &&
mkdir -p ${I_DIR}/memcard               &&
mkdir -p ${I_DIR}/nvram                 &&
mkdir -p ${I_DIR}/roms                  &&
mkdir -p ${I_DIR}/samples               &&
mkdir -p ${I_DIR}/snap                  &&
cp  -r  ctrlr  ${I_DIR}                 &&
cd ${I_DIR}                             &&
find_and_scam
