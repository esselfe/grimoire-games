   SOURCE_URL[0]=$SOURCEFORGE_URL/$SPELL/$SOURCE
     SOURCE_HASH=sha512:8c70457d4ecef48b04509c7aa031581075e03ff809f7f9e1bed6fb23c8dffdf367437fcaa3909d1c4d1a41b55b81d4b55484c6fb613a0614348945d8709a3672
