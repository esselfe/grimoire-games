   SOURCE_URL[0]=$SOURCEFORGE_URL/advancemame/$SOURCE
     SOURCE_HASH=sha512:d1a39192cd85370042ce36f51686230a132eab147639d18718756fded3712ff578474f2a8d08a72e8fcda41daf40b2b6dda2f6d1a4f516b3f0f1253055ad8728
