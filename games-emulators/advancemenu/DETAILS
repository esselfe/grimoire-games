   SOURCE_URL[0]=$SOURCEFORGE_URL/advancemame/$SOURCE
     SOURCE_HASH=sha512:c33bbb6c8b191e30f676009dbefb17ba65c203c968ffa263373c9c40b22a855a03f2c87b292607b90995d17566f85a0ce3860689860655f5eced8da563dcdedb
