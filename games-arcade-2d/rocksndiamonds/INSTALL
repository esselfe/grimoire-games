mkdir  -p  ${INSTALL_ROOT}/usr/games  &&
cp  rocksndiamonds  ${INSTALL_ROOT}/usr/games &&
cp  rocksndiamonds.1  ${INSTALL_ROOT}/usr/share/man/man1 &&
mkdir  -p  ${INSTALL_ROOT}/usr/share/games/rocksndiamonds &&
cp  -R  graphics levels music sounds  ${INSTALL_ROOT}/usr/share/games/rocksndiamonds &&
mkdir  -p  ${INSTALL_ROOT}/var/games/rocksndiamonds/scores &&
chgrp  -R  games  ${INSTALL_ROOT}/var/games/rocksndiamonds &&
chmod  -R  g+w    ${INSTALL_ROOT}/var/games/rocksndiamonds
