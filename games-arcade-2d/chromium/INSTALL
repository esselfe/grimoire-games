cd ${SOURCE_DIRECTORY}  &&
mkdir -vp ${INSTALL_ROOT}/usr/share/games/chromium/bin&&
mkdir -vp ${INSTALL_ROOT}/usr/share/games/chromium/data&&
cp -vr ${SOURCE_DIRECTORY}/data/* ${INSTALL_ROOT}/usr/share/games/chromium/data&&
cp -v ${SOURCE_DIRECTORY}/bin/chromium \
      ${INSTALL_ROOT}/usr/share/games/chromium/bin/chromium &&    
chmod 0750 ${INSTALL_ROOT}/usr/share/games/chromium/bin/chromium &&
chown root:games ${INSTALL_ROOT}/usr/share/games/chromium/bin/chromium &&
cp -v ${SCRIPT_DIRECTORY}/chromium \
      ${INSTALL_ROOT}/usr/games/chromium &&
chmod 0750 ${INSTALL_ROOT}/usr/games/chromium &&
cd ${INSTALL_ROOT}/usr/share/games/chromium/data &&
find_and_scam
